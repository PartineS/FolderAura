<Window x:Class="FolderAura.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="FolderAura - Klasör Özelleştirme" 
        Height="650" 
        Width="800"
        MinHeight="600"
        MinWidth="750"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource SystemAccentColorBrush}" 
                Padding="20,15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="📁" FontSize="24" Margin="0,0,15,0" Foreground="White"/>
                <TextBlock Text="FolderAura" FontSize="20" FontWeight="SemiBold" Foreground="White"/>
                <TextBlock Text="Masaüstü Klasör Özelleştirme" FontSize="12" 
                          Foreground="White" Margin="15,5,0,0" VerticalAlignment="Bottom"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" Padding="30,20" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- Klasör Seçimi -->
                <StackPanel Margin="0,0,0,25">
                    <TextBlock Text="📁 Klasör Seçimi" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <Border Background="{DynamicResource SystemChromeMediumLowColorBrush}" 
                            CornerRadius="8" Padding="15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="FolderPathTextBox" 
                                   Grid.Column="0" 
                                   ui:ControlHelper.PlaceholderText="Klasör yolunu seçin..."
                                   Text="{Binding SelectedFolderPath, UpdateSourceTrigger=PropertyChanged}"
                                   IsReadOnly="True"
                                   Margin="0,0,10,0"/>
                            <Button x:Name="BrowseFolderButton" 
                                  Grid.Column="1" 
                                  Content="Gözat" 
                                  Click="BrowseFolderButton_Click"
                                  MinWidth="80"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- İkon Değiştirme -->
                <StackPanel Margin="0,0,0,25">
                    <TextBlock Text="🖼️ İkon Seçimi" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <Border Background="{DynamicResource SystemChromeMediumLowColorBrush}" 
                            CornerRadius="8" Padding="15">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Icon Preview -->
                            <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" 
                                  Width="64" Height="64" 
                                  Background="{DynamicResource SystemChromeMediumColorBrush}"
                                  CornerRadius="8" Margin="0,0,15,0">
                                <Grid>
                                    <Image x:Name="IconPreview" 
                                         Stretch="Uniform" 
                                         Source="{Binding SelectedIconPath}"/>
                                    <TextBlock x:Name="DefaultIconPreview" 
                                               Text="📁" 
                                               FontSize="32"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Foreground="{DynamicResource SystemBaseHighColorBrush}"/>
                                </Grid>
                            </Border>

                            <!-- Icon Path -->
                            <TextBox x:Name="IconPathTextBox" 
                                   Grid.Row="0" Grid.Column="1" 
                                   ui:ControlHelper.PlaceholderText="İkon dosyası (.ico) seçin..."
                                   Text="{Binding SelectedIconPath, UpdateSourceTrigger=PropertyChanged}"
                                   IsReadOnly="True"
                                   Margin="0,0,10,0"/>

                            <!-- Browse Icon -->
                            <Button x:Name="BrowseIconButton" 
                                  Grid.Row="0" Grid.Column="2" 
                                  Content="İkon Seç" 
                                  Click="BrowseIconButton_Click"
                                  MinWidth="80"/>

                            <!-- Action Buttons -->
                            <StackPanel Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" 
                                      Orientation="Horizontal" 
                                      HorizontalAlignment="Right" 
                                      Margin="0,10,0,0">
                                <Button x:Name="ApplyIconButton" 
                                      Content="İkonu Uygula" 
                                      Click="ApplyIconButton_Click"
                                      Style="{DynamicResource AccentButtonStyle}"
                                      IsEnabled="{Binding CanApplyIcon}"
                                      Margin="0,0,10,0"/>
                                <Button x:Name="RemoveIconButton" 
                                      Content="İkonu Kaldır" 
                                      Click="RemoveIconButton_Click"
                                      IsEnabled="{Binding HasCustomIcon}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Görsel Efektler -->
                <StackPanel Margin="0,0,0,25">
                    <TextBlock Text="✨ Görsel Efektler" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <Border Background="{DynamicResource SystemChromeMediumLowColorBrush}" 
                            CornerRadius="8" Padding="15">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0,10">
                                <TextBlock Text="Pencere Efekti:" FontWeight="Medium" Margin="0,0,0,5"/>
                                <ComboBox x:Name="EffectComboBox" 
                                        SelectedIndex="0"
                                        SelectionChanged="EffectComboBox_SelectionChanged"
                                        MinWidth="200">
                                    <ComboBoxItem Content="Yok" Tag="None"/>
                                    <ComboBoxItem Content="Mica (Windows 11)" Tag="Mica"/>
                                    <ComboBoxItem Content="Acrylic" Tag="Acrylic"/>
                                    <ComboBoxItem Content="Saydamlık" Tag="Blur"/>
                                </ComboBox>
                            </StackPanel>

                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                     x:Name="EffectStatusText" 
                                     Text="Efekt Durumu: Hazır" 
                                     FontSize="12" 
                                     Foreground="{DynamicResource SystemBaseHighColorBrush}"
                                     VerticalAlignment="Center"/>

                            <Button Grid.Row="1" Grid.Column="1" 
                                  x:Name="ApplyEffectButton" 
                                  Content="Efekti Uygula" 
                                  Click="ApplyEffectButton_Click"
                                  MinWidth="100"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Renk ve Etiket -->
                <StackPanel Margin="0,0,0,25">
                    <TextBlock Text="🎨 Renk ve Etiket" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <Border Background="{DynamicResource SystemChromeMediumLowColorBrush}" 
                            CornerRadius="8" Padding="15">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Border Color -->
                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                     Text="Kenarlık Rengi:" 
                                     VerticalAlignment="Center" 
                                     Margin="0,0,15,0"/>
                            <StackPanel Grid.Row="0" Grid.Column="1" 
                                      Orientation="Horizontal">
                                <Rectangle x:Name="ColorPreview" 
                                         Width="30" Height="30" 
                                         Stroke="Gray" 
                                         StrokeThickness="1" 
                                         Fill="{Binding SelectedBorderColor}"
                                         ToolTip="Seçilen renk"
                                         Margin="0,0,10,0"/>
                                <Button x:Name="ColorPickerButton" 
                                      Content="Renk Seç" 
                                      Click="ColorPickerButton_Click"
                                      Margin="0,0,10,0"/>
                                <Button x:Name="ResetColorButton" 
                                      Content="Sıfırla" 
                                      Click="ResetColorButton_Click"/>
                            </StackPanel>

                            <!-- Label Text -->
                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                     Text="Etiket:" 
                                     VerticalAlignment="Top" 
                                     Margin="0,15,15,0"/>
                            <TextBox Grid.Row="1" Grid.Column="1" 
                                   x:Name="LabelTextBox" 
                                   ui:ControlHelper.PlaceholderText="Klasör açıklaması veya etiketi..."
                                   Text="{Binding FolderLabel, UpdateSourceTrigger=PropertyChanged}"
                                   MaxLength="100"
                                   Margin="0,15,0,0"/>

                            <!-- Apply Label -->
                            <Button Grid.Row="2" Grid.Column="1" 
                                  x:Name="ApplyLabelButton" 
                                  Content="Etiket Uygula" 
                                  Click="ApplyLabelButton_Click"
                                  HorizontalAlignment="Right"
                                  Margin="0,10,0,0"
                                  Style="{DynamicResource AccentButtonStyle}"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Ayar Yönetimi -->
                <StackPanel Margin="0,0,0,25">
                    <TextBlock Text="💾 Ayar Yönetimi" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <Border Background="{DynamicResource SystemChromeMediumLowColorBrush}" 
                            CornerRadius="8" Padding="15">
                        <StackPanel Orientation="Horizontal" 
                                  HorizontalAlignment="Center">
                            <Button x:Name="SaveSettingsButton" 
                                  Content="Ayarları Kaydet" 
                                  Click="SaveSettingsButton_Click"
                                  Style="{DynamicResource AccentButtonStyle}"
                                  MinWidth="120"
                                  Margin="0,0,15,0"/>
                            <Button x:Name="LoadSettingsButton" 
                                  Content="Ayarları Yükle" 
                                  Click="LoadSettingsButton_Click"
                                  MinWidth="120"
                                  Margin="0,0,15,0"/>
                            <Button x:Name="ResetAllButton" 
                                  Content="Tümünü Sıfırla" 
                                  Click="ResetAllButton_Click"
                                  MinWidth="120"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>

        <!-- Status Bar -->
        <Border Grid.Row="2" 
                Background="{DynamicResource SystemChromeMediumColorBrush}" 
                Padding="15,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="StatusText" 
                          Grid.Column="0" 
                          Text="Hazır - Klasör seçin ve özelleştirmeye başlayın"
                          FontSize="12"
                          VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" 
                          Text="FolderAura v1.0 | Windows 11 Optimized"
                          FontSize="10"
                          Foreground="{DynamicResource SystemBaseHighColorBrush}"
                          VerticalAlignment="Center"/>
            </Grid>
        </Border>

    </Grid>
</Window>
